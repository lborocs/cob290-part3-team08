{
  "info": {
    "name": "Team08 Chat & Analytics API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Create Chat (Admin)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/x-www-form-urlencoded"
          }
        ],
        "body": {
          "mode": "urlencoded",
          "urlencoded": [
            {
              "key": "chat_name",
              "value": "Test Chat"
            },
            {
              "key": "creator_id",
              "value": "1"
            }
          ]
        },
        "url": {
          "raw": "http://localhost/api/chats/createWithAdmin.php",
          "host": [
            "localhost"
          ],
          "path": [
            "api",
            "chats",
            "createWithAdmin.php"
          ]
        }
      }
    },
    {
      "name": "Make User Admin",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/x-www-form-urlencoded"
          }
        ],
        "body": {
          "mode": "urlencoded",
          "urlencoded": [
            {
              "key": "chat_id",
              "value": "1"
            },
            {
              "key": "user_id",
              "value": "2"
            },
            {
              "key": "is_admin",
              "value": "1"
            }
          ]
        },
        "url": {
          "raw": "http://localhost/api/chats/makeAdmin.php",
          "host": [
            "localhost"
          ],
          "path": [
            "api",
            "chats",
            "makeAdmin.php"
          ]
        }
      }
    },
    {
      "name": "Get Tasks (Analytics)",
