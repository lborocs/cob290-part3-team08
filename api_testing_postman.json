    {
      "name": "Get Employee Workload",
      "request": {
        "method": "GET",
        "url": {
          "raw": "http://localhost/api/analytics/getEmployeeWorkload.php?employee_id=6&start_date=2024-03-01&end_date=2024-06-01",
          "host": [
            "localhost"
          ],
          "path": [
            "api",
            "analytics",
            "getEmployeeWorkload.php"
          ],
          "query": [
            {
              "key": "employee_id",
              "value": "6"
            },
            {
              "key": "start_date",
