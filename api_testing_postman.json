    {
      "name": "Get Near Deadline Tasks",
      "request": {
        "method": "GET",
        "url": {
          "raw": "http://localhost/api/analytics/getNearDeadlineTasks.php?days=3",
          "host": [
            "localhost"
          ],
          "path": [
            "api",
